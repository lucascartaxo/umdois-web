<div class="container center">
  <!-- TODO refactor this shitty inline style -->
  <div  class="z-depth-3 y-depth-3 x-depth-3 grey green-text lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px; margin-top: 50px; solid #EEE;">
    <div class="section">
      <%= t('.forgot_your_password', :default => 'Forgot your password?') %>
    </div>
    
    <div class="section"><i class="mdi-alert-error red-text"></i></div>
    
    <!-- BEGIN FORM -->
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class='row'>
      <div class='input-field col s12'>
        <%= f.label :email, class: "validate" %><br />
        <%= f.email_field :email, required: true %>
      </div>
    </div>
    <br/>
    
    <div class='row'>
      <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "center btn btn-small waves-effect z-depth-1 y-depth-1" %>
    </div>
    <% end %>
    <!-- END FORM -->
    
    <%= render "devise/shared/links" %>
    
  </div>
</div>