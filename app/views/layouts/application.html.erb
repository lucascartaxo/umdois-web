<!DOCTYPE html>
<html>

<head>
  <title>UmdoisWeb</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
  <%= render "layouts/menu" %>

  <p class="notice yellow"><%= notice %></p>
  <p class="alert red"><%= alert %></p>
  

  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">
            <% if current_user %>
              Olá <%= current_user&.name %>!
            <% else %>
              nenhuma sessão
            <% end %>
          </span>
            
        </div>
        <div class="card-action">
          <% if current_user.nil? %>
            <%= link_to new_user_session_path, class: 'btn' do %>Sign in<% end %>
          <% else %>
            <%= link_to library_index_path, class: 'btn' do %>biblioteca<% end %>
            <%= link_to destroy_user_session_path, class: 'btn', method: :delete do %>Log out<% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row container">
    <%= yield %>
  </div>

  <%= render "layouts/footer" %>
</body>

</html>